{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es6",
    "module": "es2020",
    "checkJs": true,
    "jsx": "react",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build", "config", ".vscode"],
  "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"]
}
